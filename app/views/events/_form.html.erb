<ul>
    <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
</ul>

<%= form_with model: @event do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br />
    <%= f.label :date %>
    <%= f.datetime_select :date %><br />
    <%= f.label :location %>
    <%= f.text_field :location %><br />
    <%= f.label :description %><br />
    <%= f.text_area :description, size: "60x10" %><br />

    <%= f.submit %>
<% end %>