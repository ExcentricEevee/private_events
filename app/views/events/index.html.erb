<% if user_signed_in? %>
    <p>You're signed in as <%= link_to current_user.username, current_user %></p>
    <%= link_to "(Sign Out)", destroy_user_session_path, data: { turbo_method: "delete" } %>
<% else %>
    <p><%= link_to "(Sign In)", new_user_session_path %></p>
<% end %>

<h1>Event List</h1>

<h5>Past Events</h5>
<ul>
    <% @events.past.each do |event| %>
        <li><%= link_to event.title, event %></li>
    <% end %>
</ul>

<h5>Upcoming Events</h5>
<ul>
    <% @events.future.each do |event| %>
        <li><%= link_to event.title, event %></li>
    <% end %>
</ul>