<% if user_signed_in? %>
    <p>You're signed in as <%= current_user.username %></p>
    <%= link_to "(Sign Out)", destroy_user_session_path, data: { turbo_method: "delete" } %>
<% else %>
    <p><%= link_to "(Sign In)", new_user_session_path %></p>
<% end %>

<h1>Event List</h1>

<ul>
    <% @events.each do |event| %>
        <li><%= event.title %></li>
    <% end %>
</ul>